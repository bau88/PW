<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="ejbModule" transaction-type="JTA">
		<jta-data-source>cvs-ds</jta-data-source>
		<class>entidades.Caja</class>
		<class>entidades.Cliente</class> 
		<class>entidades.Compra</class>
		<class>entidades.CompraDetalle</class>
		<class>entidades.Factura</class>
		<class>entidades.FacturaDetalle</class>
		<class>entidades.Pago</class>
		<class>entidades.Producto</class>
		<class>entidades.ProductoProveedor</class>
		<class>entidades.Proveedor</class>
		<class>entidades.RegistroPago</class>
		<class>entidades.Rol</class>
		<class>entidades.Usuario</class>

		<exclude-unlisted-classes>true</exclude-unlisted-classes>					
		<properties>
			<property name="hibernate.show_sql" value="true"/>
      	</properties>
	</persistence-unit>
</persistence>
